{% extends "layout.njk" %}

{% block content %}
<form class="card" method="POST" action="/teachers">
  <section class="avatar" style="background: url(https://source.unsplash.com/collection/10553730/300) no-repeat center center / cover">
  </section>

  <section class="details">
    <h3>Novo professor</h3>

    <div class="item">
      <div>Avatar URL</div>
      <div>
        <input type="url" name="avatar_url" placeholder="http://">
      </div>
    </div>

    <div class="item">
      <div>Nome completo</div>
      <div>
        <input type="text" name="name" placeholder="Nome completo">
      </div>
    </div>

    <div class="item">
      <div>Data de nascimento</div>
      <div>
        <input type="date" name="birth">
      </div>
    </div>

    <div class="item">
      <div>Grau de escolaridade</div>
      <div>
        <select name="degree">
          <option value="hign-school">Ensino Médio Completo</option>
          <option value="bachelor" selected>Superior Completo</option>
          <option value="master">Mestrado</option>
          <option value="doctorate">Doutorado</option>
        </select>
      </div>
    </div>

    <div class="item">
      <div>Tipo de aula</div>
      <div>
        <span><input type="radio" name="class" value="P" checked>Presencial</span>
        <span><input type="radio" name="class" value="D">À Distância</span>
      </div>
    </div>

    <div class="item">
      <div>Área de atuação</div>
      <div>
        <input type="text" name="services" placeholder="Separe os serviços prestados por vírgula">
      </div>
    </div>

    <button type="submit">Salvar</button>

  </section>
</form>
{% endblock content %}
