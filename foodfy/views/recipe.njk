{% extends "layout.njk" %}

{% block head %}
  <title>Receitas</title>
{% endblock %}

    {% block content%}
    <main>
        <section class="recipe-info">
            <div id="img">
                <img src="{{recipe.image}}" alt="">
                <h3>{{recipe.title}}</h3>
                <p>{{recipe.author}}</p>
            </div>

            <div class="recipe-description">
                <div id="ingredientes">               
                    <div class="subtitle">
                        <h1>Ingredientes
                            <span class="span">Esconder</span>
                        </h1>                   
                    </div>    
                    <div class="description">
                        <ul class="ingredients-list">                
                            {%for ingredient in recipe.ingredients%} 
                            <li>{{ingredient}}</li> 
                            {%endfor%} 
                        </ul>
                    </div>                                 
                </div>
            </div>
            
            <div class="recipe-description">
                <div id="prepare">
                    <div class="subtitle">
                        <h1>Modo de preparo
                            <span class="span">Esconder</span>
                        </h1>                    
                    </div>  
                    <div class="description">
                        <p>{{recipe.preparation}}</p>
                    </div>                       
                </div>
            </div>
            
            <div class="recipe-description">
                <div id="information">
                    <div class="subtitle">
                        <h1>Informações adicionais
                            <span class="span">Esconder</span>
                        </h1>                   
                    </div>
                    <div class="description">
                        <p>{{recipe.information}}</p>
                    </div>                   
                </div>
            </div>            
            
        </section>
    </main>

    <script src="/script.js"></script>
    {%endblock%}
