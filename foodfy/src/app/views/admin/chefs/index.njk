{% extends "adminLayout.njk" %}

{% block content %}
  <main>
    <h2 class="admin-title">Gerenciar chefs</h2>

    <section class="admin-chefs">

      {% for chef in chefs %}
        <div class="admin-chef">
          <div class="chef-image a">
            <img src="{{chef.avatar_url}}" alt="Imagem de {{chef.name}}"/>
          </div>
          <div>
            <h3>{{chef.name}}</h3>
            <a class="chef-link" href="/admin/chefs/{{chef.id}}">Visualizar</a>
          </div>
        </div>
      {% endfor %}

    </section>

    <a href="/admin/chefs/create" class="new-chef">
      <div>+</div>
      Novo chef
    </a>

  </main>
  
{% endblock content %}