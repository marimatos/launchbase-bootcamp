{%extends "layout.njk"%}

{%block title%}
  <title>{{recipe.title}}</title>
{%endblock title%}

{% block content %}

<section class="container-recipe-detail">
  
  <div class="recipe-img">
    <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
  </div>

  <div class="recipe-info-detail">    
      <h2>{{recipe.title}}</h2>
      <p>{{recipe.chef_name}}<p>      
  </div>

  <div class="recipe-description">
    <div class="hide-button">
      <div>
        <h3>Ingredientes</h3>
      </div>
      <div class="span">
        <span>Esconder</span>
      </div>
    </div>
    <div class="content">
      <ul>
        {% for ingredient in recipe.ingredients %}
          <li>{{ingredient}}</li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="recipe-description">
    <div class="hide-button">
      <div>
        <h3>Modo de preparo</h3>
      </div>
      <div class="span">
        <span>Esconder</span>
      </div>
    </div>
    <div class="content">
      <ul>
        {% for item in recipe.preparation %}
          <li>{{item}}</li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="recipe-description">
    <div class="hide-button">
      <div>
        <h3>Informações extras</h3>
      </div>
      <div class="span">
        <span>Esconder</span>
      </div>
    </div>
    <div class="content">
      <p>{{recipe.information}}</p>
    </div>
  </div>

</section>
      
{% endblock content%}